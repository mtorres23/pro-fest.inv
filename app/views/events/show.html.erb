<%= link_to 'Edit', edit_event_path(@event), class:'btn waves-effect waves-light' %>
<%= link_to 'Back', account_events_path(@event.account), class:'btn waves-effect waves-light' %>
<hr>


<div class = 'event-show'>
<p id="notice"><%= notice %></p>

<h3>
  <strong>Title:</strong>
  <%= @event.title %>
</h3>

<p>
  <strong>Start date:</strong>
  <%= @event.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @event.end_date %>
</p>

<p>
  <strong>Address:</strong>
  <%= @event.address %>
</p>



<p>
  <strong>Latitude:</strong>
  <%= @event.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @event.longitude %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @event.admin_id %>
</p>

<p>
  <strong>Prev year event:</strong>
  <%= @event.prev_year_event_id %>
</p>




<h4 class = 'center loc-header'>Locations</h4>
<hr>
  <%= link_to 'Add Location', new_event_location_path(@event), class: 'btn btn-success btn-lg loc-btn' %>
<div class="card">
  <div class="container locations-content">



    <table class="centered highlighted">
        <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Address</th>
      <th>Latitude</th>
      <th >Longitude</th>
      <th>Event</th>
      <th>Current Order</th>
      <th>Last Order</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @event.locations.each do |location| %>
      <tr>
        <td><%= link_to location.title, event_location_path(event_id: @event.id, id: location.id) %></td>
        <td><%= location.loc_type %></td>
        <td><%= location.address%></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.event.title %></td>
        <td><%= %></td>
        <td><%=  %></td>
      </tr>
    <% end %>

  </tbody>
</table>


<br>
  </div>
</div>


</div>
